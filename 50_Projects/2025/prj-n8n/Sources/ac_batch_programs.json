  "parsing_rules": {
    "date_patterns": [
      {
        "pattern": "\\d{4}\\.\\d{2}\\.\\d{2}",
        "format": "YYYY.MM.DD"
      },
      {
        "pattern": "\\d{4}-\\d{2}-\\d{2}",
        "format": "YYYY-MM-DD"
      },
      {
        "pattern": "\\d{4}년 \\d{1,2}월 \\d{1,2}일",
        "format": "YYYY년 MM월 DD일"
      },
      {
        "pattern": "\\d{1,2}/\\d{1,2}",
        "format": "MM/DD",
        "notes": "Infer current year if date within 6 months"
      }
    ],
    "status_keywords": {
      "open": [
        "모집중",
        "접수중",
        "신청가능",
        "open",
        "accepting applications"
      ],
      "closed": [
        "마감",
        "종료",
        "완료",
        "closed",
        "ended"
      ],
      "rolling": [
        "상시모집",
        "상시",
        "rolling",
        "ongoing"
      ]
    },
    "redaction_patterns": [
      "\\d+억원",
      "\\d+만원",
      "\\$\\d+[KM]",
      "equity \\d+%",
      "SAFE \\$\\d+",
      "\\d+% equity",
      "pre-money \\$\\d+",
      "post-money \\$\\d+"
    ]
  },
  "error_handling": {
    "retry_strategy": {
      "max_attempts": 3,
      "delay_ms": 5000,
      "exponential_backoff": true
    },
    "partial_failure_mode": "continue",
    "error_alert_threshold": 3
  },
  "notes": "This configuration file serves as the Single Source of Truth (SSOT) for the\nAC Batch Daily Digest workflow. All data sources, accelerators, parsing rules,\nand configuration are centralized here to enable easy updates without modifying\nthe n8n workflow JSON.\n\nThe workflow reads this YAML file at runtime and uses it to:\n- Fetch data from K-Startup and Google\n- Parse HTML/JSON responses\n- Classify programs by status\n- Format Discord messages\n- Handle errors and edge cases\n\nTo add a new accelerator, simply append to the accelerators[] array.\nTo modify parsing rules, update the parsing_rules section.\n"
}
