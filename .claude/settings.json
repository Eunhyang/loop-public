{
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "Skill",
      "Edit(~/.claude/**)",
      "Write(~/.claude/**)",
      "Bash(codex:*)",
      "Bash(echo:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git remote:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/validate-agent-output.sh"
          }
        ]
      }
    ]
  }
}
