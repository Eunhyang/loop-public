{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "Skill",
      "Edit(~/.claude/**)",
      "Write(~/.claude/**)",
      "Bash(codex:*)",
      "Bash(echo:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git remote:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git fetch:*)",
      "Bash(git stash:*)",
      "Bash(git tag:*)",
      "Bash(git show:*)",
      "Bash(git rebase:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(curl:*)",
      "Bash(sleep:*)",
      "Bash(cd:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(sshpass:*)",
      "Bash(ssh:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(node:*)",
      "Bash(#:*)"
    ]
  },
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-allow-bash.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/validate-agent-output.sh"
          }
        ]
      }
    ]
  }
}
